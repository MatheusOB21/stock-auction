<section id="lot-winners">
  <div><h2>Lotes vencidos<h2><div>
  <% if @lots_winners.any? %>
  </div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th scope="col"><%= Lot.human_attribute_name(:code) %></th>
          <th scope="col"><%= Lot.human_attribute_name(:start_date) %></th>
          <th scope="col"><%= Lot.human_attribute_name(:limit_date) %></th>
        </tr>
      </thead>
      <tbody>
      <% @lots_winners.each do |lot|%>
        <tr>
          <th scope="row"><%= link_to lot.code, lot_path(lot) %></th>
          <td><%= I18n.localize(lot.start_date) %></td>
          <td><%= I18n.localize(lot.limit_date) %></td>
        </tr>
      <% end %>  
      </tbody>
    </table>
  </div>
  <% else %>
    <h3>Nenhum lote vencido</h3>
  <% end %>
</section>