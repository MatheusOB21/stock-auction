<section id="new-answer">
  <div>
    <h2> <%= @question.question %> </h2>
    <h2> <%= I18n.t(:you_answer)%> </h2>
      <%= form_with(model:[@question, @answer]) do |f| %>
      <div>
        <div>
          <%= f.label :answer, class: "fs-2" %>
        </div>
        <div>
          <%= f.text_area :answer %>
        </div>
        <div>
          <%= f.submit I18n.t(:submit), class:"btn btn-primary mt-2" %>
        </div>
      </div>
    <% end %>
  </div>  

  <div id = "errors-messages">
    <% if @answer.errors.any? %>
      <ul class="list-group mt-2">
      <% @answer.errors.full_messages.each do |msg|%>
        <li class="badge text-bg-warning"><%= msg %></li>
      <% end %>
      </ul>
    <% end %>
  </div>

</section>