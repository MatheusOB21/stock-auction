<section id="lot-favorites">
  <div><h2>Lotes favoritos<h2><div>
  <% if @favorites.any? %>
  </div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th scope="col"><%= Lot.human_attribute_name(:code) %></th>
          <th scope="col"><%= Lot.human_attribute_name(:start_date) %></th>
          <th scope="col"><%= Lot.human_attribute_name(:limit_date) %></th>
          <th scope="col"><%= I18n.t(:status) %></th>
        </tr>
      </thead>
      <tbody>
      <% @favorites.each do |favorite|%>
        <tr>
          <th scope="row"><%= link_to favorite.lot.code, lot_path(favorite.lot.id)%></th>
          <td><%= I18n.l(favorite.lot.start_date) %></td>
          <td><%= I18n.l(favorite.lot.limit_date) %></td>
        <%if favorite.lot.future %>
          <td>Lote futuro</td>
        <% else %>  
          <td><%= favorite.lot.finished_bids ? "Lote encerrado" : "Lote em andamento" %></td>
        <% end %>  
        </tr>
      <% end %>  
      </tbody>
    </table>
  </div>
  <% else %>
    <h3>Nenhum lote favorito</h3>
  <% end %>
</section>